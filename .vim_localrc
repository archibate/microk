au BufNewFile,BufRead .vim_localrc set ft=vim
au BufNewFile,BufRead *.c,*.h syn keyword Type uchar ushort uint ulong cap_t ipc_data_t l4id_t s4id_t
au BufNewFile,BufRead *.c,*.h syn keyword Type TCB MSG MSGDAT SEM SPACE FPAGE MFRAG CAP CSPACE GENERIC_CAP IF_REGS UT_REGS TX_MSG ICH_MSG SEGDESC GATEDESC
au BufNewFile,BufRead *.c,*.h syn keyword Constant L4_NIL L4_ANY L4_IPC L4_SEND L4_RECV L4_CALL L4_WAIT L4_RETN L4_ACTV L4_FORK L4_SHARE L4_GRANT L4_REAL
au BufNewFile,BufRead *.c,*.h syn keyword Constant MAXTASK MAXCAP MAXMSG MAXIRQ TIME0 ENOCAP EWBLOCK ENWAIT ENCALL ONRECV ONSEND WAITRET BLOCKED RUNNING
au BufNewFile,BufRead *.c,*.h syn keyword Function vpt vpd vregs wregs wtopg vcurr vcspace vldt LCMP MKWORD LOWORD HIWORD L4_IRQ
au BufNewFile,BufRead *.c,*.h syn keyword Keyword STRUCT UNION assert __attribute__ ARRAY_SIZEOF
au BufNewFile,BufRead *.c,*.h syn keyword Constant IRQ_TIMER IRQ_KEYBOARD IRQ_MOUSE
au BufNewFile,BufRead *.c,*.h syn keyword Typedef POOL_TYPE

nnoremap <F5> :wa<CR>:!make -B run<CR><CR>
nnoremap <F6> :wa<CR>:!make -B debug DEBUG=1<CR><CR>
nnoremap <F7> :wa<CR>:!make -B bochsrun<CR><CR>
nnoremap <F12> :wa<CR>:!make -B test OPTIMIZE=3<CR>

inoremap jk <ESC>
