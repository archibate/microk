au BufNewFile,BufRead .vim_localrc set ft=vim
au BufNewFile,BufRead *.c,*.h syn keyword Type uchar ushort uint ulong cap_t
au BufNewFile,BufRead *.c,*.h syn keyword Type TCB SPACE FPAGE MFRAG CAP CSPACE GENERIC_CAP IF_REGS UT_REGS FS_ARGS
au BufNewFile,BufRead *.c,*.h syn keyword Constant C4_NIL C4_ANY C4_IPC C4_ACTV C4_FORK C4_SMAP C4_GRNT C4_REAL
au BufNewFile,BufRead *.c,*.h syn keyword Constant NIL ANY MAXTASK MAXCAP TIME0 BLOCKED RUNNING ENOCAP
au BufNewFile,BufRead *.c,*.h syn keyword Keyword STRUCT UNION assert __attribute__ ARRAY_SIZEOF
au BufNewFile,BufRead *.c,*.h syn keyword Function vpt vpd vregs vcspace oldregs LCMP
au BufNewFile,BufRead *.c,*.h syn keyword Typedef POOL_TYPE

nnoremap <F5> :wa<CR>:!make -B run<CR><CR>
nnoremap <F6> :wa<CR>:!make -B debug DEBUG=1<CR><CR>
nnoremap <F7> :wa<CR>:!make -B bochsrun<CR><CR>
nnoremap <F12> :wa<CR>:!make -B test OPTIMIZE=3<CR>

inoremap jk <ESC>
