au BufNewFile,BufRead .vim_localrc set ft=vim
au BufNewFile,BufRead *.c syn keyword Type TCB IF_REGS UT_REGS
au BufNewFile,BufRead *.c syn keyword Type uchar ushort uint ulong
au BufNewFile,BufRead *.c syn keyword Constant C4_NIL C4_ANY C4_IPC C4_FORK C4_RELA
au BufNewFile,BufRead *.c syn keyword Constant NIL ANY MAXTASK IPC FORK
au BufNewFile,BufRead *.c syn keyword Function vpt vpd vregs oldregs LCMP
au BufNewFile,BufRead *.c syn keyword Constant ONSEND ONRECV BLOCKED RUNNING
au BufNewFile,BufRead *.c syn keyword Constant PPGMAX TMPGMAX TIME0
au BufNewFile,BufRead *.c syn keyword Keyword __attribute__
au BufNewFile,BufRead *.c syn keyword Keyword STRUCT assert

nnoremap <F5> :wa<CR>:!make -B run<CR><CR>
nnoremap <F6> :wa<CR>:!make -B debug DEBUG=1<CR><CR>
nnoremap <F7> :wa<CR>:!make -B bochsrun<CR><CR>
nnoremap <F12> :wa<CR>:!make -B test OPTIMIZE=3<CR>

inoremap jk <ESC>
