au BufNewFile,BufRead .vim_localrc set ft=vim
au BufNewFile,BufRead *.c,*.h syn keyword Type uchar ushort uint ulong
au BufNewFile,BufRead *.c,*.h syn keyword Type TCB SPACE FPAGE MFRAG IF_REGS UT_REGS FS_ARGS
au BufNewFile,BufRead *.c,*.h syn keyword Constant C4_NIL C4_ANY C4_IPC C4_ACTV C4_FORK C4_SMAP C4_GRNT C4_REAL
au BufNewFile,BufRead *.c,*.h syn keyword Constant NIL ANY MAXTASK  PPGMAX TMPGMAX TIME0 BLOCKED RUNNING
au BufNewFile,BufRead *.c,*.h syn keyword Keyword STRUCT UNION assert __attribute__
au BufNewFile,BufRead *.c,*.h syn keyword Function vpt vpd vregs oldregs LCMP

nnoremap <F5> :wa<CR>:!make -B run<CR><CR>
nnoremap <F6> :wa<CR>:!make -B debug DEBUG=1<CR><CR>
nnoremap <F7> :wa<CR>:!make -B bochsrun<CR><CR>
nnoremap <F12> :wa<CR>:!make -B test OPTIMIZE=3<CR>

inoremap jk <ESC>
